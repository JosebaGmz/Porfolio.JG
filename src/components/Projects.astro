---
import AngularIcon from "../icons/AngularIcon.astro";
import FireBaseIcon from "../icons/FireBaseIcon.astro";
import FlutterIcon from "../icons/FlutterIcon.astro";
import GitHubIcon from "../icons/GitHubIcon.astro";
import JavaIcon from "../icons/JavaIcon.astro";
import Link from "../icons/Link.astro";
import LinkButton from "./LinkButton.astro";

const TAGS = {
  JAVA: {
    name: "Java",
    class: "bg-[#003159] text-white",
    icon: JavaIcon,
  },
  FLUTTER: {
    name: "Flutter",
    class: "bg-[#003159] text-white",
    icon: FlutterIcon,
  },
  FIREBASE: {
    name: "FireBase",
    class: "bg-black text-white",
    icon: FireBaseIcon,
  },
  ANGULAR: {
    name: "Angular",
    class: "bg-black text-white",
    icon: AngularIcon,
  }
}
const PROJECTS = [
  {
    title: "Proyecto TFG - Trabajo de Fin de Grado",
    description:
      "Aplicaci贸n de Compra Venta online de zapatillas creada en Flutter y FireBase como metodo de base de datos NoSQL orientada a los documentos.",
    link: "https://proyecto-final-dam-joseba.web.app/",
    github: "https://github.com/JosebaGmz/Proyecto-Final",
    image: "https://raw.githubusercontent.com/JosebaGmz/Porfolio.JG/main/public/assets/TFG.webp",
    tags: [TAGS.FLUTTER, TAGS.FIREBASE],
    backEnd: "https://github.com/JosebaGmz/Proyecto-Final"
  },
  {
    title: "Proyecto CRUD - Gesti贸n de Inventarios",
    description:
      "Aplicaci贸n de Gesti贸n de inventarios creada en Java, Mysql, Spring Boot y Angular con consultas HttpRequest GET, PUT, DELETE, POST.",
    link: "ew",
    github: "https://github.com/JosebaGmz/ProyectoGinventariosFrontEnd",
    image: "https://raw.githubusercontent.com/JosebaGmz/Porfolio.JG/main/public/assets/GIProyect.png",
    tags: [TAGS.JAVA, TAGS.ANGULAR],
    backEnd: "https://github.com/JosebaGmz/ProyectoGinventariosBackEnd"
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github, backEnd }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Proyects" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHubIcon class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
          {backEnd &&(
            <LinkButton href={backEnd}>
              <GitHubIcon class="size-6"/>
              BackEnd
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>